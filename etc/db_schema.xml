<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="nvn_employee_entity" resource="default" engine="innodb" comment="Nvn Employee Entity">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="employee_name" nullable="false" default=" " comment="Employee Name"/>
        <column xsi:type="smallint" name="department_id" nullable="false" unsigned="true" comment="Department Id"/>
        <column xsi:type="varchar" name="email" nullable="true" length="155" comment="Email"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="nvn_employee_entity_datetime" resource="default" engine="innodb" comment="nvn_employee_entity_datetime">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="datetime" name="value" on_update="false" nullable="true" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="NVN_COMP_ENTT_DTIME_ATTR_ID_EAV_ATTR_ATTR_ID"
                    table="nvn_employee_entity_datetime" column="attribute_id" referenceTable="eav_attribute"
                    referenceColumn="attribute_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="NVN_COMP_ENTT_DTIME_ENTT_ID_NVN_EMP_ENTT_ENTT_ID"
                    table="nvn_employee_entity_datetime" column="entity_id" referenceTable="nvn_employee_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="NVN_EMP_ENTITY_DATETIME_STORE_ID_STORE_STORE_ID"
                    table="nvn_employee_entity_datetime" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="NVN_EMP_ENTITY_DATETIME_ENTITY_ID_ATTRIBUTE_ID_STORE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="store_id"/>
        </constraint>
        <index referenceId="NVN_EMP_ENTITY_DATETIME_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="NVN_EMP_ENTITY_DATETIME_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
